{% extends 'baseAdmin.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
    <div class="container">
        <h1 style="text-align: center; margin-top: 10px;  margin-bottom: 30px;">Liste des catégories:</h1>
        <a href="{{path("admin_categorie_new")}}"><button class="btn btn-warning" type="button"> Ajouter une catégorie</button></a>
            <div class="row">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nom Categorie</th>
                            <th>Image</th>
                            <th>Description</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
    
        {% for categorie in categories %}
        
                        <tr>
                            <td>{{categorie.id}}</td>
                            <td>{{categorie.nomCat}}</td>
                            <td> <img  class="card-img-top" src="{{ categorie.image }}"  style=" width:150px; "height="100px"></td>
                            <td>{{categorie.description}}</td>
                            <td>
                                <a href="{{ path('admin_categorie', {'id': categorie.id}) }}"><button class="btn btn-info" type="button"><i class="fa fa-search">Voir</i></button></a>
                                <a href="{{ path('admin_categorie_edit', {'id': categorie.id}) }}"><button class="btn btn-dark" type="button"><i class="fas fa-pen">Editer</i></button></a>
                                <a href="{{ path('admin_categorie_delete', {'id': categorie.id}) }}"> <button class="btn btn-danger" type="button"><i class="fas fa-trash">Supprimer</i></button></a>
                            
                            </td>
                        </tr>
        {% else %}
            <tr>    
                <td colspan="53">Il n'y a pas de catégorie dans la base de donnée.</td>
            </tr>
        {% endfor %}
                    </tbody>
                </table>
            </div>

    </div>
{% endblock %}
