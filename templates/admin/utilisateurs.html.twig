{% extends 'baseAdmin.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
    <div class="container">
        <h1 style="text-align: center; margin-top: 10px;  margin-bottom: 30px;">Liste des utilisateurs:</h1>
            <div class="row">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nom</th>
                            <th>Prénom</th>
                            <th>Email</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
    
        {% for utilisateur in utilisateurs %}
        
                        <tr>
                            <td>{{utilisateur.id}}</td>
                            <td>{{utilisateur.nom}}</td>
                            <td>{{utilisateur.prenom}}</td>
                            <td>{{utilisateur.email}}</td>

                            <td>
                                <a href="{{path("admin_utilisateur", {'id': utilisateur.id})}}"><button class="btn btn-info" type="button"><i class="fa fa-search">Voir</i></button></a>
                                <a href="{{path("admin_utilisateur_edit", {'id': utilisateur.id})}}"><button class="btn btn-dark" type="button"><i class="fas fa-pen">Editer</i></button></a>
                                <a href="{{path("admin_utilisateur_delete", {'id': utilisateur.id})}}"> <button class="btn btn-danger" type="button"><i class="fas fa-trash">Supprimer</i></button></a>
                            
                            </td>
                        </tr>
        {% else %}
            <tr>    
                <td colspan="53">Il n'y a pas de catégorie dans la base de donnée.</td>
            </tr>
        {% endfor %}
                    </tbody>
                </table>
            </div>

    </div>
{% endblock %}
